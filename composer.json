{
    "name": "raigu/x-road-client",
    "description": "PHP library for making X-Road requests using PSR-18 libraries",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Rait Kapp",
            "email": "3442567+raigu@users.noreply.github.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Raigu\\XRoad\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
           "Raigu\\Test\\": "tests/"
        }
    },
    "require": {
